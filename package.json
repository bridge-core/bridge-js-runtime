{
	"name": "bridge-js-runtime",
	"version": "0.2.0",
	"description": "A fast compiler for Minecraft Add-Ons",
	"scripts": {
		"test": "vitest",
		"build:types": "tsc --project tsconfig.json",
		"build:only": "vite build",
		"build": "vite build && npm run build:types"
	},
	"main": "./dist/bridge-js-runtime.umd.js",
	"module": "./dist/bridge-js-runtime.es.js",
	"types": "./dist/main.d.ts",
	"exports": {
		".": {
			"import": "./dist/bridge-js-runtime.es.js",
			"require": "./dist/bridge-js-runtime.umd.js"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bridge-core/bridge-sandbox.git"
	},
	"author": "solvedDev",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/bridge-core/bridge-sandbox/issues"
	},
	"homepage": "https://github.com/bridge-core/bridge-sandbox#readme",
	"dependencies": {
		"@swc/wasm": "^1.2.205",
		"magic-string": "^0.26.2",
		"path-browserify": "^1.0.1",
		"vitest": "^0.15.2"
	},
	"devDependencies": {
		"@types/path-browserify": "^1.0.0",
		"typescript": "^4.5.4",
		"vite": "^2.6.13"
	}
}
